const EXTENSION_VERSION = "v0.6.3 (Beta)";
const RELEASE_DATE = "Upload for Review";
---

<Layout>
  <Header />

  <main
    class="min-h-screen bg-gradient-to-br from-[#081919] via-[#0e2a2a] to-[#081919] pt-32 pb-16"
  >
    <div class="max-w-7xl mx-auto px-4">
      <!-- Hero Section -->
      <div class="text-center mb-16 scroll-animate">
        <img
          src="/Purro_Logotype_White.png"
          alt="Purro Logo"
          class="h-16 mx-auto mb-6"
        />
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-4">
          Install Extension
        </h1>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          Get started with Purro - the purr-fect Web3 wallet extension. Choose
          your preferred installation method below.
        </p>
      </div>

      <!-- Extension Preview -->
      <div class="mb-24 scroll-animate">
        <h2 class="text-3xl font-semibold text-white text-center mb-6">
          See Purro in Action
        </h2>
        <p class="text-gray-300 text-center mb-16 max-w-2xl mx-auto">
          Get a preview of what you'll experience with Purro extension
        </p>

        <!-- Screenshots Carousel for Mobile, Grid for Desktop -->
        <div class="mb-8">
          <!-- Mobile Carousel -->
          <div class="md:hidden">
            <div class="overflow-x-auto pb-4">
              <div class="flex gap-4 w-max">
                <div
                  class="bg-black/20 rounded-xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
                >
                  <img
                    src={screenshot1.src}
                    alt="Purro Extension - Main Interface"
                    class="w-full h-auto object-cover"
                  />
                </div>
                <div
                  class="bg-black/20 rounded-xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
                >
                  <img
                    src={screenshot2.src}
                    alt="Purro Extension - Wallet View"
                    class="w-full h-auto object-cover"
                  />
                </div>
                <div
                  class="bg-black/20 rounded-xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
                >
                  <img
                    src={screenshot3.src}
                    alt="Purro Extension - Portfolio"
                    class="w-full h-auto object-cover"
                  />
                </div>
                <div
                  class="bg-black/20 rounded-xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
                >
                  <img
                    src={screenshot4.src}
                    alt="Purro Extension - Trading"
                    class="w-full h-auto object-cover"
                  />
                </div>
                <div
                  class="bg-black/20 rounded-xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
                >
                  <img
                    src={screenshot5.src}
                    alt="Purro Extension - Settings"
                    class="w-full h-auto object-cover"
                  />
                </div>
                <div
                  class="bg-black/20 rounded-xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
                >
                  <img
                    src={screenshot6.src}
                    alt="Purro Extension - Dashboard"
                    class="w-full h-auto object-cover"
                  />
                </div>
              </div>
            </div>
            <p class="text-xs text-gray-400 text-center mt-2">
              ‚Üê Swipe to see more screenshots ‚Üí
            </p>
          </div>

          <!-- Desktop Grid -->
          <div class="hidden md:block">
            <div class="grid grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">
              <!-- All Screenshots Equal Size -->
              <div
                class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
              >
                <img
                  src={screenshot1.src}
                  alt="Purro Extension - Main Interface"
                  class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
                />
              </div>

              <!-- Regular Screenshots -->
              <div
                class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
              >
                <img
                  src={screenshot2.src}
                  alt="Purro Extension - Wallet View"
                  class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div
                class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
              >
                <img
                  src={screenshot3.src}
