---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Button from "../components/Button";
import chrome from "../assets/chrome.png";
import screenshot1 from "../assets/full-screenshots/1.png";
import screenshot2 from "../assets/full-screenshots/2.png";
import screenshot3 from "../assets/full-screenshots/3.png";
import screenshot4 from "../assets/full-screenshots/4.png";
import screenshot5 from "../assets/full-screenshots/5.png";
import screenshot6 from "../assets/full-screenshots/6.png";
import screenshot7 from "../assets/full-screenshots/7.png";
import screenshot8 from "../assets/full-screenshots/8.png";
import screenshot9 from "../assets/full-screenshots/9.png";
import screenshot10 from "../assets/full-screenshots/10.png";
import screenshot11 from "../assets/full-screenshots/11.png";
import screenshot12 from "../assets/full-screenshots/12.png";
import importScreenshot from "../assets/full-screenshots/import-screenshot.png";
import onboardingScreenshot from "../assets/full-screenshots/onboarding-screenshot.png";
import {
  ExternalLinkIcon,
  ClockIcon,
  InfoIcon,
  GithubIcon,
} from "@lucide/astro";

// Constants for easy customization
const CHROME_STORE_URL =
  "https://chromewebstore.google.com/detail/purro-beta/ehfplamebglaemcflkgjlomdbbpmehof";
const GITHUB_RELEASES_URL =
  "https://github.com/terrancrypt/purro-extension/releases";
---

<Layout>
  <Header />

  <main
    class="min-h-screen bg-gradient-to-br from-[#081919] via-[#0e2a2a] to-[#081919] pt-32 pb-16"
  >
    <div class="max-w-6xl mx-auto px-4">
      <!-- Hero Section -->
      <div class="text-center mb-20 scroll-animate">
        <img
          src="/Purro_Logotype_White.png"
          alt="Purro Logo"
          class="h-16 mx-auto mb-8"
        />
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-6">
          Install Purro Extension
        </h1>
        <p
          class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed"
        >
          Get started with Purro - the purr-fect Web3 wallet extension.
          Available now on the Chrome Web Store.
        </p>
      </div>

      <!-- Chrome Web Store Installation (Main Focus) -->
      <div class="max-w-2xl mx-auto mb-32">
        <div
          class="bg-black/20 backdrop-blur-sm rounded-3xl p-10 border border-white/10 scroll-animate hover:border-[#02f1dc]/30 transition-all duration-300"
        >
          <div class="flex items-center gap-4 mb-8">
            <div class="p-4 bg-[#02f1dc]/20 rounded-full">
              <img src={chrome.src} alt="chrome" class="h-8 w-8" />
            </div>
            <h2 class="text-2xl font-semibold text-white">Chrome Web Store</h2>
          </div>

          <p class="text-gray-300 mb-8 leading-relaxed">
            Purro is now available on the Chrome Web Store! Get automatic
            updates, enhanced security, and seamless Chrome integration with
            one-click installation.
          </p>

          <a
            href={CHROME_STORE_URL}
            target="_blank"
            rel="noopener noreferrer"
            class="w-full bg-[#02f1dc] hover:bg-[#02f1dc]/80 text-black font-bold py-4 px-8 text-lg rounded-full transition-all duration-300 flex items-center justify-center gap-3 no-underline mb-8"
          >
            <ExternalLinkIcon class="h-6 w-6" />
            Install from Chrome Web Store
          </a>

          <!-- Benefits -->
          <div class="p-6 bg-white/5 rounded-2xl border border-white/10">
            <h3 class="text-xl font-semibold text-white mb-4">Benefits:</h3>
            <ul class="text-gray-300 space-y-3">
              <li class="flex items-center gap-3">
                <span class="text-[#02f1dc] text-xl">•</span>
                Automatic updates
              </li>
              <li class="flex items-center gap-3">
                <span class="text-[#02f1dc] text-xl">•</span>
                One-click installation
              </li>
              <li class="flex items-center gap-3">
                <span class="text-[#02f1dc] text-xl">•</span>
                Enhanced security
              </li>
              <li class="flex items-center gap-3">
                <span class="text-[#02f1dc] text-xl">•</span>
                Seamless Chrome integration
              </li>
              <li class="flex items-center gap-3">
                <span class="text-[#02f1dc] text-xl">•</span>
                Official Chrome Web Store verification
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Release Notes Section -->
      <div class="mb-24 scroll-animate">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-semibold text-white mb-6">
            Stay Updated
          </h2>
          <p class="text-lg text-gray-300 max-w-2xl mx-auto">
            Check out the latest features, bug fixes, and improvements in our
            release notes.
          </p>
        </div>

        <div class="max-w-2xl mx-auto">
          <div
            class="bg-black/20 backdrop-blur-sm rounded-3xl p-10 border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
          >
            <div class="flex items-center gap-4 mb-8">
              <div class="p-4 bg-[#02f1dc]/20 rounded-full">
                <GithubIcon class="h-8 w-8 text-[#02f1dc]" />
              </div>
              <h3 class="text-2xl font-semibold text-white">Release Notes</h3>
            </div>

            <p class="text-gray-300 mb-8 leading-relaxed">
              View detailed release notes, changelog, and technical
              documentation for all Purro extension versions.
            </p>

            <a
              href={GITHUB_RELEASES_URL}
              target="_blank"
              rel="noopener noreferrer"
              class="w-full bg-black/30 hover:bg-black/50 text-[#02f1dc] border border-[#02f1dc]/30 font-semibold py-4 px-8 text-lg rounded-full transition-all duration-300 flex items-center justify-center gap-3 no-underline"
            >
              <GithubIcon class="h-6 w-6" />
              View Release Notes
            </a>
          </div>
        </div>
      </div>

      <!-- Key Features Highlight -->
      <div class="mb-24 scroll-animate">
        <h2
          class="text-3xl md:text-4xl font-semibold text-white text-center mb-16"
        >
          Why Choose Purro?
        </h2>
        <div class="grid md:grid-cols-3 gap-10 mb-32">
          <div class="text-center">
            <div
              class="w-16 h-16 bg-[#02f1dc]/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-[#02f1dc]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Secure & Non-Custodial
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Your keys, your crypto. Full control over your assets with
              bank-level security
            </p>
          </div>
          <div class="text-center">
            <div
              class="w-16 h-16 bg-[#02f1dc]/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-[#02f1dc]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">
              Lightning Fast
            </h3>
            <p class="text-gray-300 leading-relaxed">
              Optimized for speed with instant transactions and seamless Web3
              interactions
            </p>
          </div>
          <div class="text-center">
            <div
              class="w-16 h-16 bg-[#02f1dc]/20 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-[#02f1dc]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-4">User Friendly</h3>
            <p class="text-gray-300 leading-relaxed">
              Intuitive design that makes Web3 accessible to everyone, from
              beginners to pros
            </p>
          </div>
        </div>
      </div>

      <!-- Extension Preview (Supporting Content) -->
      <div class="mb-24 scroll-animate">
        <h2 class="text-4xl font-semibold text-white text-center mb-8">
          See Purro in Action
        </h2>
        <p class="text-xl text-gray-300 text-center mb-16 max-w-3xl mx-auto">
          Get a preview of what you'll experience with Purro extension
        </p>

        <!-- Mobile Carousel -->
        <div class="md:hidden mb-12">
          <div class="overflow-x-auto pb-4">
            <div class="flex gap-6 w-max px-4">
              <div
                class="bg-black/20 rounded-2xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
              >
                <img
                  src={screenshot1.src}
                  alt="Purro Extension - Main Interface"
                  class="w-full h-auto object-cover"
                />
              </div>
              <div
                class="bg-black/20 rounded-2xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
              >
                <img
                  src={screenshot2.src}
                  alt="Purro Extension - Wallet View"
                  class="w-full h-auto object-cover"
                />
              </div>
              <div
                class="bg-black/20 rounded-2xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
              >
                <img
                  src={screenshot3.src}
                  alt="Purro Extension - Portfolio"
                  class="w-full h-auto object-cover"
                />
              </div>
              <div
                class="bg-black/20 rounded-2xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
              >
                <img
                  src={screenshot4.src}
                  alt="Purro Extension - Trading"
                  class="w-full h-auto object-cover"
                />
              </div>
              <div
                class="bg-black/20 rounded-2xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
              >
                <img
                  src={screenshot5.src}
                  alt="Purro Extension - Settings"
                  class="w-full h-auto object-cover"
                />
              </div>
              <div
                class="bg-black/20 rounded-2xl overflow-hidden border border-white/10 w-80 flex-shrink-0"
              >
                <img
                  src={screenshot6.src}
                  alt="Purro Extension - Dashboard"
                  class="w-full h-auto object-cover"
                />
              </div>
            </div>
          </div>
          <p class="text-sm text-gray-400 text-center">
            ← Swipe to see more screenshots →
          </p>
        </div>

        <!-- Desktop Grid -->
        <div class="hidden md:block mb-16">
          <div class="grid grid-cols-3 lg:grid-cols-4 gap-6">
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot1.src}
                alt="Purro Extension - Main Interface"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot2.src}
                alt="Purro Extension - Wallet View"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot3.src}
                alt="Purro Extension - Portfolio"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot4.src}
                alt="Purro Extension - Trading"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot5.src}
                alt="Purro Extension - Settings"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot6.src}
                alt="Purro Extension - Dashboard"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot7.src}
                alt="Purro Extension - Advanced Features"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot8.src}
                alt="Purro Extension - Transactions"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot9.src}
                alt="Purro Extension - Analytics"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot10.src}
                alt="Purro Extension - DeFi Features"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot11.src}
                alt="Purro Extension - Security Settings"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div
              class="bg-black/20 rounded-xl overflow-hidden border border-white/10 hover:border-[#02f1dc]/30 transition-all duration-300"
            >
              <img
                src={screenshot12.src}
                alt="Purro Extension - Advanced Tools"
                class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
          </div>
        </div>

        <!-- Featured PC Screenshots -->
        <div class="space-y-12">
          <!-- Import Feature -->
          <div
            class="bg-black/20 backdrop-blur-sm rounded-3xl p-8 border border-white/10"
          >
            <div class="grid md:grid-cols-2 gap-12 items-center">
              <div>
                <h4 class="text-2xl font-semibold text-white mb-6">
                  Easy Wallet Import
                </h4>
                <p class="text-gray-300 mb-6 text-lg leading-relaxed">
                  Import your existing wallets seamlessly. Support for seed
                  phrases, private keys, and popular wallet formats.
                </p>
                <ul class="text-gray-400 space-y-3">
                  <li class="flex items-center gap-3">
                    <span class="text-[#02f1dc] text-xl">✓</span>
                    12/24 word seed phrases
                  </li>
                  <li class="flex items-center gap-3">
                    <span class="text-[#02f1dc] text-xl">✓</span>
                    Private key import
                  </li>
                  <li class="flex items-center gap-3">
                    <span class="text-[#02f1dc] text-xl">✓</span>
                    Watch any wallet on Hyperliquid
                  </li>
                </ul>
              </div>
              <div
                class="bg-black/30 rounded-2xl overflow-hidden border border-white/10"
              >
                <img
                  src={importScreenshot.src}
                  alt="Purro Extension - Wallet Import Process"
                  class="w-full h-auto object-cover"
                />
              </div>
            </div>
          </div>

          <!-- Onboarding Feature -->
          <div
            class="bg-black/20 backdrop-blur-sm rounded-3xl p-8 border border-white/10"
          >
            <div class="grid md:grid-cols-2 gap-12 items-center">
              <div class="md:order-2">
                <h4 class="text-2xl font-semibold text-white mb-6">
                  Smooth Onboarding
                </h4>
                <p class="text-gray-300 mb-6 text-lg leading-relaxed">
                  Get started in minutes with our intuitive onboarding flow. No
                  Web3 experience required.
                </p>
                <ul class="text-gray-400 space-y-3">
                  <li class="flex items-center gap-3">
                    <span class="text-[#02f1dc] text-xl">✓</span>
                    Step-by-step guidance
                  </li>
                  <li class="flex items-center gap-3">
                    <span class="text-[#02f1dc] text-xl">✓</span>
                    Security best practices
                  </li>
                  <li class="flex items-center gap-3">
                    <span class="text-[#02f1dc] text-xl">✓</span>
                    Beginner-friendly interface
                  </li>
                </ul>
              </div>
              <div
                class="md:order-1 bg-black/30 rounded-2xl overflow-hidden border border-white/10"
              >
                <img
                  src={onboardingScreenshot.src}
                  alt="Purro Extension - Onboarding Experience"
                  class="w-full h-auto object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- System Requirements -->
      <div
        class="bg-black/20 backdrop-blur-sm rounded-3xl p-10 border border-white/10 scroll-animate mb-24"
      >
        <h2 class="text-3xl font-semibold text-white mb-10 text-center">
          System Requirements
        </h2>
        <div class="grid md:grid-cols-3 gap-10 text-center">
          <div>
            <img src={chrome.src} alt="chrome" class="h-12 w-12 mx-auto mb-4" />
            <h3 class="text-xl font-semibold text-white mb-3">
              Chrome Browser
            </h3>
            <p class="text-gray-300">Version 88 or higher</p>
          </div>
          <div>
            <svg
              class="h-12 w-12 text-[#02f1dc] mx-auto mb-4"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
              ></path>
            </svg>
            <h3 class="text-xl font-semibold text-white mb-3">
              Operating System
            </h3>
            <p class="text-gray-300">Windows, macOS, or Linux</p>
          </div>
          <div>
            <svg
              class="h-12 w-12 text-[#02f1dc] mx-auto mb-4"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
                clip-rule="evenodd"></path>
            </svg>
            <h3 class="text-xl font-semibold text-white mb-3">
              Internet Connection
            </h3>
            <p class="text-gray-300">Required for installation</p>
          </div>
        </div>
      </div>

      <!-- FAQ Section -->
      <div class="mb-24 scroll-animate">
        <h2 class="text-4xl font-semibold text-white text-center mb-16">
          Frequently Asked Questions
        </h2>
        <div class="space-y-8">
          <div
            class="bg-black/20 backdrop-blur-sm rounded-2xl p-8 border border-white/10"
          >
            <h3 class="text-2xl font-semibold text-white mb-4">
              How do I install Purro extension?
            </h3>
            <p class="text-gray-300 text-lg leading-relaxed">
              Simply click the "Install from Chrome Web Store" button above.
              This will take you to the official Chrome Web Store where you can
              install Purro with one click. The extension will be automatically
              updated when new versions are released.
            </p>
          </div>

          <div
            class="bg-black/20 backdrop-blur-sm rounded-2xl p-8 border border-white/10"
          >
            <h3 class="text-2xl font-semibold text-white mb-4">
              Is Purro safe to install from Chrome Web Store?
            </h3>
            <p class="text-gray-300 text-lg leading-relaxed">
              Yes! Purro is officially verified by Google and available on the
              Chrome Web Store. This means it has passed Google's security
              review process and is safe to install. The extension is also open
              source, so you can review the code on GitHub.
            </p>
          </div>

          <div
            class="bg-black/20 backdrop-blur-sm rounded-2xl p-8 border border-white/10"
          >
            <h3 class="text-2xl font-semibold text-white mb-4">
              How do I get updates for Purro?
            </h3>
            <p class="text-gray-300 text-lg leading-relaxed">
              When installed from the Chrome Web Store, Purro will automatically
              update to the latest version. You can also manually check for
              updates by going to chrome://extensions/ and clicking the refresh
              icon on the Purro extension card.
            </p>
          </div>

          <div
            class="bg-black/20 backdrop-blur-sm rounded-2xl p-8 border border-white/10"
          >
            <h3 class="text-2xl font-semibold text-white mb-4">
              What browsers are supported?
            </h3>
            <p class="text-gray-300 text-lg leading-relaxed">
              Currently, Purro is available for Chrome and other Chromium-based
              browsers (like Edge, Brave, and Opera). We're working on support
              for Firefox and other browsers in future releases.
            </p>
          </div>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="text-center scroll-animate">
        <h2 class="text-3xl font-semibold text-white mb-6">Need Help?</h2>
        <p class="text-gray-300 mb-10 text-lg">
          Join our community for support and updates about Purro extension.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-6 mb-8">
          <a
            href="https://discord.gg/TxvDwvfMTv"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-[#02f1dc] hover:bg-[#02f1dc]/80 text-black font-semibold px-8 py-4 rounded-full transition-all duration-300 no-underline text-lg"
          >
            Join Discord
          </a>
          <a
            href="https://docs.purro.xyz"
