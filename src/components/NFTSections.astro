---
import nft1 from "@/assets/nfts/1.png";
import nft2 from "@/assets/nfts/2.png";
import nft3 from "@/assets/nfts/3.png";
import nft4 from "@/assets/nfts/4.png";
import nft5 from "@/assets/nfts/5.png";
import nft6 from "@/assets/nfts/6.png";
import nft7 from "@/assets/nfts/7.png";
import nft8 from "@/assets/nfts/8.png";
import nft9 from "@/assets/nfts/9.png";
import nft10 from "@/assets/nfts/10.png";
import nft11 from "@/assets/nfts/11.png";
import nft12 from "@/assets/nfts/12.png";
import Button from "./Button";
import NFTCarousel from "./NFTCarousel";
---

<div class="min-h-screen relative bg-gradient-to-b from-[#033b32] via-[#022a22] to-[#021919]">
  <div class="container max-w-7xl mx-auto py-20 px-4 flex flex-col lg:flex-row items-center justify-center gap-8 min-h-screen">
    <div class="w-full lg:w-1/2 flex flex-col items-center lg:items-start">
      <h2 class="text-3xl md:text-5xl text-center lg:text-left text-white whitespace-nowrap">
        Limited NFT Collection <br /> for Early Users
      </h2>
      <p class="mt-2 text-base lg:text-base leading-relaxed text-white text-center lg:text-left whitespace-nowrap">
        Claim your 1st NFT and join the exclusive community <br/>
        of Purro pioneers. Each NFT grants special privileges<br/>
        and early access to premium features.
      </p>
      <div class="text-center lg:text-left hidden lg:block mt-22">
        <Button 
          isToast={true} 
          toastMessage="Coming soon" 
          client:load 
          className="px-8 py-4 text-lg lg:text-xl lg:mt-15"
        >
          Claim now!
        </Button>
      </div>
    </div>

    <div class="w-full lg:w-1/2 flex flex-col items-center lg:items-start">
      <div class="relative">
        <NFTCarousel 
          nfts={[nft1, nft2, nft3, nft4, nft5, nft6, nft7, nft8, nft9, nft10, nft11, nft12]} 
          client:load 
        />
      </div>
      <div class="text-center lg:hidden mt-6">
        <Button 
          isToast={true} 
          toastMessage="Coming soon" 
          client:load 
          className="px-8 py-4 text-lg lg:text-xl"
        >
          Claim now!
        </Button>
      </div>
    </div>
  </div>
</div>
