---
import logo from "@/assets/purro-logo.png";
import twitter from "@/assets/xIcon.svg";
import telegram from "@/assets/teleIcon.svg";
import discord from "@/assets/discordIcon.svg";
---

<div class="relative">
  <div class="w-full h-full bg-[#081919] z-[-2] absolute top-0 left-0"></div>
  <div class="container max-w-7xl mx-auto text-white py-28 px-2 h-full">
    <div class="flex flex-col md:flex-row justify-between scroll-animate">
      <img
        src={logo.src}
        alt="logo"
        class="h-5 md:h-7 scroll-animate-left delay-200"
      />
      <div class="space-y-6 scroll-animate-right delay-300">
        <p>
          Follow us for the lastest airdrops, updates, Web3 drama, spicy
          memes... and the occasional cat pic.
        </p>
        <div class="flex items-center">
          <a href="https://x.com/purro_xyz" target="_blank">
            <img
              src={twitter.src}
              alt="twitter"
              class="h-5 md:h-7 pr-4 border-r border-white"
            />
          </a>
          <a href="https://x.com/purro_xyz" target="_blank">
            <img
              src={telegram.src}
              alt="twitter"
              class="h-5 md:h-7 px-4 border-r border-white"
            />
          </a>
          <a href="https://x.com/purro_xyz" target="_blank">
            <img
              src={discord.src}
              alt="twitter"
              class="h-5 md:h-7 px-4 border-r border-white"
            />
          </a>
          <a
            href="https://docs.purro.xyz"
            target="_blank"
            class="h-5 md:h-7 px-4"
          >
            DOCUMENTATION
          </a>
        </div>
      </div>
    </div>
    <div class="text-left mt-28 scroll-animate delay-400">
      Â© {new Date().getFullYear()} Purro. All rights reserved.
    </div>
  </div>
</div>
