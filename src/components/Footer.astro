---
import logo from "@/assets/Purro_Logotype_White.png";
import twitter from "@/assets/xIcon.svg";
import telegram from "@/assets/teleIcon.svg";
import discord from "@/assets/discordIcon.svg";
import linkedin from "@/assets/linkedinIcon.svg";
---

<div class="relative bg-gradient-to-b from-[#021919] to-[#081919]">
  <div
    class="container max-w-7xl mx-auto text-white py-12 sm:py-16 md:py-20 px-4 h-full"
  >
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Logo and Description -->
      <div class="lg:col-span-2">
        <img
          src="/Purro_Logotype_White.png"
          alt="logo"
          class="h-8 sm:h-10 md:h-12 w-auto mb-6"
        />
        <p class="text-sm sm:text-base leading-relaxed max-w-md text-gray-300">
          Follow us for the latest airdrops, updates, Web3 drama, spicy memes...
          and the occasional cat pic.
        </p>
      </div>

      <!-- Social Media -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Connect</h3>
        <div class="flex items-center gap-4">
          <a
            href="https://x.com/purro_xyz"
            aria-label="Purro on X (Twitter)"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 bg-white/10 rounded-lg hover:bg-white/20 transition-all duration-300"
          >
            <img src={twitter.src} alt="X (Twitter)" class="h-5 w-5" />
          </a>
          <a
            href="https://t.me/purro_xyz"
            aria-label="Purro on Telegram"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 bg-white/10 rounded-lg hover:bg-white/20 transition-all duration-300"
          >
            <img src={telegram.src} alt="Telegram" class="h-5 w-5" />
          </a>
          <a
            href="https://discord.gg/TxvDwvfMTv"
            aria-label="Purro on Discord"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 bg-white/10 rounded-lg hover:bg-white/20 transition-all duration-300"
          >
            <img src={discord.src} alt="Discord" class="h-5 w-5" />
          </a>
          <a
            href="https://www.linkedin.com/company/purrowallet"
            aria-label="Purro on LinkedIn"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 bg-white/10 rounded-lg hover:bg-white/20 transition-all duration-300"
          >
            <img src={linkedin.src} alt="LinkedIn" class="h-5 w-5" />
          </a>
        </div>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Resources</h3>
        <div class="space-y-3">
          <a
            href="https://docs.purro.xyz"
            target="_blank"
            rel="noopener noreferrer"
            class="block text-gray-300 hover:text-[#02f1dc] transition-colors duration-300"
          >
            Documentation
          </a>
          <a
            href="https://github.com/terrancrypt/purro-extension"
            target="_blank"
            rel="noopener noreferrer"
            class="block text-gray-300 hover:text-[#02f1dc] transition-colors duration-300"
          >
            GitHub
          </a>
          <a
            href="mailto:hello@purro.xyz"
            class="block text-gray-300 hover:text-[#02f1dc] transition-colors duration-300"
          >
            hello@purro.xyz
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-white/10 pt-8">
      <div
        class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4"
      >
        <div class="text-sm sm:text-base text-gray-400">
          Â© {new Date().getFullYear()} Purro. All rights reserved.
        </div>
        <nav
          class="flex items-center gap-4 sm:gap-6 text-[#b1cac4] text-sm sm:text-base"
        >
          <a
            href="/terms"
            class="hover:text-white underline-offset-4 hover:underline transition-colors duration-300"
          >
            Terms
          </a>
          <span class="opacity-30">|</span>
          <a
            href="/privacy"
            class="hover:text-white underline-offset-4 hover:underline transition-colors duration-300"
          >
            Privacy
          </a>
        </nav>
      </div>
    </div>
  </div>
</div>
